<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="team.tasktacker.CreateTask">


    <EditText
        android:id="@+id/task_title_editText"
        android:layout_width="368dp"
        android:layout_height="wrap_content"
        android:inputType="text"
        android:hint="@string/enter_task_title" />

    <EditText
        android:id="@+id/work_units_editText"
        android:layout_width="368dp"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:hint="@string/work_units"
        app:layout_constraintTop_toBottomOf="@+id/task_title_editText" />

    <Button
        android:id="@+id/save_task_button"
        android:text="@string/save_task"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        app:layout_constraintRight_toLeftOf="parent"
        app:layout_constraintLeft_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/work_units_editText" />

</android.support.constraint.ConstraintLayout>
